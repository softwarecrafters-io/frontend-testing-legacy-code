{
  "name": "frontend-testing-with-legacy",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start:back": "ts-node -P tsconfig.backend.json ./src/backend/main.ts",
    "start:front": "vite",
    "test:e2e": "cypress run",
    "test:unit": "jest --testMatch='**/src/tests/unit/**/*.test.*'",
    "test:integration": "jest --testMatch='**/src/tests/integration/**/*.test.*'",
    "test": "npm run test:e2e && npm run test:integration && npm run test:unit"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/uuid": "^9.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^28.1.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "cypress": "^12.17.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "node-fetch": "^3.3.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.9.5",
    "vite": "^4.4.5"
  }
}
